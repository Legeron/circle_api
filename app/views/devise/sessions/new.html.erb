<%= content_for :meta_title, "Circle - Se connecter" %>

<div class="container d-flex flex-column align-items-center justify-content-center mb-9 mt-8 font-size-16px">
  <div class="mb-4"><%= svg_tag 'logo-picto' %></div>
  <h2 class="font-size-32px text-grey-dark mb-4">Se connecter à Circle</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs d-flex flex-column gap-2">
      <%= f.input :email,
                  label: 'Email',
                  required: false,
                  label_html: { class: 'text-grey-blue' },
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'text-grey' } %>
      <%= f.input :password,
                  label: 'Mot de passe',
                  placeholder: '••••••••',
                  required: false,
                  label_html: { class: 'text-grey-blue' },
                  input_html: { autocomplete: "current-password", class: "text-grey" } %>

      <div class="d-flex justify-content-between gap-5">
        <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi", label_html: { class: 'text-grey-blue' } if devise_mapping.rememberable? %>
        <%= link_to 'Mot de passe oublié', new_password_path(resource_name), class: "text-green text-decoration-none fw-bolder" %>
      </div>
    </div>

    <div class="form-actions mt-2">
      <%= f.button :submit, "Se connecter", class: 'fw-bolder text-white w-100 btn btn-green' %>
    </div>

    <div class="text-grey mt-3">
      Vous n'avez pas de compte ? <span class="text-green fw-bolder"><%= link_to 'Inscrivez-vous', new_registration_path(resource_name), class: "text-decoration-none" %> </span>
    </div>
  <% end %>

</div>
